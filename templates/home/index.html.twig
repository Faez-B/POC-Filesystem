{% extends 'base.html.twig' %}

{% block title %}Filesystem{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Save</button>
    {{ form_end(form) }}

    {% if base64 is defined and not base64 is empty %}
        <article>{{ base64|u.truncate(200, '...') }}</article>
        <article id="base64" style='display: none;'>{{ base64 }}</article>
        <button class='contrast'>Copy to clipboard</button>
    {% endif %}
{% endblock %}
